"macro parlp"
"**************************************************"
"						   "
"   parlp  -	creates the LP parameters for the  "
"		requested dimension		   "
"						   "
"**************************************************"

if ($# = 0) then $1=0 endif
if ($1 < 0) or ($1 > 2) or ($# > 1) then
         write('error','parlp  -  usage: parlp<(dim)>  dim = [0,2] inclusive')
         return
endif

$mod=''
if ($1 > 0) then
 format($1,'lower'):$mod
endif
$mod='parlp'+$mod
module('add',$mod,'basic')
