"macro isStudy"

"Usage: isStudy($path):$b,$studydir"
"return: 0 not a study, or don't know"
"        1 a study dir"
"        2 a subdir of a study dir"

if $# < 0.5 then return(0,'') endif

exists($1+'/studypar','file'):$e
if($e > 0.5) then 
  return(1,$1)
else
  strstr($1,'/data/','last'):$n,$dir
  exists($dir+'/studypar','file'):$e
  if($e > 0.5) then 
     return(2,$dir)
  else
     return(0,'')
  endif
endif
