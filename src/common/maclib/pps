"macro pps"

if ( $# = 0 ) then
  PPS
elseif ( $# = 1 ) then
  PPS($1)
elseif ( $# = 2 ) then
  PPS($1,$2)
elseif ( $# = 3 ) then
  PPS($1,$2,$3)
elseif ( $# = 4 ) then
  PPS($1,$2,$3,$4)
elseif ( $# = 5 ) then
  PPS($1,$2,$3,$4,$5)
elseif ( $# = 6 ) then
  PPS($1,$2,$3,$4,$5,$6)
elseif ( $# = 7 ) then
  PPS($1,$2,$3,$4,$5,$6,$7)
else
  PPS
endif
