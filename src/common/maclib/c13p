"macro c13p"
" c13p - simple c13 spectra processing "

$sp=sp $wp=wp					" remember display settings "
on('lb'):$lbon
$lb=lb lb=1
wft f ai
aph
lb=$lb 
if (not $lbon) then
  lb='n'
endif 
wft

ai integrate					" integration "
  vsadjc(0.7*wc2max - vp)
  noislm
  $maxpeaks=0.15*wc2max
  $noisemult=5
  thadj($maxpeaks,$noisemult)
  setrefpos
  tmsref2
sp=$sp wp=$wp					" restore display parameters "
