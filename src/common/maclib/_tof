"macro _tof"
"**************************************"
" _tof - update sfrq when tof is changed"
"**************************************"
setfrq(1)
if (tn = 'none') and (tof[1] <> 0) then
   $off = tof[1]
   $count = size('tof')
   $i = 1
   while ($i <= $count) do
      tof[$i] = tof[$i] - $off
      $i = $i + 1
   endwhile
   write('line3','tn=\'none\'; sfrq adjusted instead of tof')
endif
