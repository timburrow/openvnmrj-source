"macro ecc_twamp"
"ecc_twamp a macro to tweak amplitudes"


if ($#=0) then
	write('error','Numeric argument required 1 to 4.. ')
endif

if ($1=1) then
	write('line3','called 1')
	ecc_tweak('amp1',amp1,tc1*1.0e-3) 
endif

if ($1=2) then
	ecc_tweak('amp2',amp2,tc2*1.0e-3) 
endif

if ($1=3) then
	ecc_tweak('amp3',amp3,tc3*1.0e-3) 
endif

if ($1=4) then
	ecc_tweak('amp4',amp4,tc4*1.0e-3) 
endif

