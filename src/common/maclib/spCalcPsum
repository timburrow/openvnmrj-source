"macro spCalcPsum"
// spCalcPsum - calculate the vector of sums of the elements in the spVec matrix

$j = 1
$index = ''
while ($j <= spDim) do
  $sum = 0
  $i = 1
  while ($i <= (spDim+1) ) do
    format($i,0,0):$index
    $vec = 'spVec'+$index
    $sum = $sum + {$vec}[$j]
    $i = $i + 1
  endwhile
  spSum[$j] = $sum
  $j = $j + 1
endwhile
