"macro convertbru"
"-----------------------------------------------------------------------"
" convertbru(filename, <options>):				"
"-----------------------------------------------------------------------"

if ($# < 1) then 
    write('error','Usage: convertbru(filename, <options>)')
    ABORT
endif

if ($# = 1) then
   shell('convertbru','"'+$1+'"')
else
   if (($# > 1) and ($# < 8)) then
      $arglist = $2
      $i = 3
      while ($i <= $#) do
	$arglist = $arglist + ' ' + ${$i}
	$i=$i+1
      endwhile
      shell('convertbru','"'+$1+'"',$arglist)
   else
      write('error','Maximum number of arguments is 7.')
      ABORT
   endif
endif
