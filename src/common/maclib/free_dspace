"macro free_dspace"
" usage: free_dspace(dir) "

$dir = ''
if($# > 0) then $dir = $1 else 
echo('usage: free_dspace(dir)') endif

shell('df -b "' + $dir +'"'):$name,$space

substr($space, 2):$dspace

$disk_space = ''
format($dspace/1000,6,0):$disk_space
$disk_space = $disk_space + ' Mb free'
return($disk_space)
