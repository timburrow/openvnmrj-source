"macro selsetsw"
"set frequencies for selective 1D"
"given ($1,$2) in ppm, find (bandwidth,offset) in Hz"

if $#<1.5 then return endif

"from setsw"
setref(tn,'setup'):$rfl,$rfp,$reffrq,$refpos
$center= (($1+$2)/2)
$tof = $center*$reffrq - $rfp + $rfl
$sw=($1-$2)*$reffrq

"set sw, tof into parameters"
selfrqc=$tof
selfrqw=$sw
