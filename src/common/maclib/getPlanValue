"macro getPlanValue"
$s=''
if(orient = 'trans') then
   $s = 'standard getTransverse'
elseif orient = 'cor' then 
   $s = 'standard getCoronal'
elseif orient = 'sag' then 
   $s = 'standard getSagittal'
elseif orient = '3orthogonal' then 
   $s = 'standard get3orthogonal'
elseif orient = 'oblique' then 
   $s = 'standard getCurrentStacks'
elseif(orient = 'trans90') then
   $s = 'standard euler 0 0 90'
elseif orient = 'cor90' then 
   $s = 'standard euler 90 0 90'
elseif orient = 'sag90' then 
   $s = 'standard euler 90 90 90'
endif

return($s)
