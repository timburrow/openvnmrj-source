"macro getstudypar"
" savesampglobal "

	if ($# < 1) then return(0) endif
	$studydir=$1

	if ($studydir = '') then return(0) endif
	exists($studydir,'file','w'):$ok
	if ($ok=0) then return(0) endif

	pwd:$curdir
	cd($studydir):$dum
        exists('studypar','file'):$sampparex
        if ($sampparex) then
           fread('studypar')
        endif
	cd($curdir):$dum
	return(1)
