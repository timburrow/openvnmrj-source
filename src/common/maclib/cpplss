"macro cpplss"
"cpplss: a macro for making a labeled stack plot"

dssh(1,celem,'dodc')
pl(1,celem,'dodc') pltext:$xt,$yt

$ok=0
$str = '' 
shell('(echo "'+array+'" | grep "[(]")'):$str
if $str = '' then 
    substr(array,'wc','delimiter',','):$words
    if ($words<1.5) then $ok=1 endif
endif

if ($ok=1) then
    write('plotter',$xt,$yt-5,'array: %s',array)
else
    plotarray(array)
endif
page
