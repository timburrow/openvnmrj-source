"macro go_gH2BCAD"
" run-time macro for gH2BCAD -- making sure ni does not exceed what BigT allows "

$maxni = (BigT/2  - 1/(j1min+j1max) - 2*gtE - 2*gstab - pwx180*1e-6)*2*sw1-2

if (ni > $maxni) then
  ni = $maxni
  write('error','Warning: ni exceeded what BigT allows.  Reset to %d',ni)
  setLP1
  gaussian('f1')
  EXPtime:ACQtime
endif
