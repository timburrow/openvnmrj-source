"macro savestudypar"
" savesampglobal "

	if ($# < 1) then return endif
	$studydir=$1

	if ($studydir = '') then return endif
	exists($studydir,'file','w'):$ok
	if ($ok=0) then return endif

	pwd:$curdir
	cd($studydir):$dum

	$list=''
	module('arraylist','studypar'):$list
	if ($list[1]<>'') then
                writeparam('studypar','$list','current')
	endif
	cd($curdir):$dum

