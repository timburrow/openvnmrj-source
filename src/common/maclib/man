"macro man"
" *********************************** "
" **** macro man('command name') **** "
" *********************************** "

if auto='y' then
  return
endif

if $#<>1 then 
    write('line3','Usage:  man(\'command name\')')
    ABORT
endif

$found = 0
exists($1,'manual'):$found,$path
if $found > 0 then
  clear
  cat($path)
  if ($## = 1) then
    return(1)
  endif
else
  if ($## = 1) then
    return(0)
  else
    write('error','No manual entry for \'%s\'',$1)
  endif
endif

