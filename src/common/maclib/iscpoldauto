"macro iscpoldauto"
$autodir='' $Qname=''
shell('basename '+$1):$Qname
shell('dirname '+$1):$autodir
$old=0
shell('(cat '+$1+' | grep -c CustomQ)'):$old
if ($old=0) then
   shell('(cat '+$1+'.macdir/overniteQ | grep -c CustomQ)'):$old
endif
if ($old=0) and ($Qname='enterQ') then
   shell('(cat '+$autodir+'/doneQ | grep -c CustomQ)'):$old
endif
return($old)
