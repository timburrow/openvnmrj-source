"macro array2strsv"
"array to string separated variable"

$total=size('$1')
if ($# < 2) then $2=' ' endif
$i=1 $ret='' 
repeat
  $s=''
  if typeof('$1') then
	$s=$1[$i]
  else
	format($1[$i],'lower'):$s
  endif
  if $i=1 then $ret=$s 
  else $ret=$ret+$2+$s endif
  $i=$i+1
until $i > $total
return($ret)
