"macro ATfind2Hpwr"
"find2Hpwr"
av
$counter=1     
select($counter) peak:$ht $bestheight=$ht $bestindex=$counter
repeat
   select($counter) 
   peak:$ht 
   if ($ht>$bestheight) then
      $bestheight=$ht                  "finds maximum"
      $bestindex=$counter
   endif
   $counter=$counter+1
   if (($ht<0.75*$bestheight) and ($counter>arraydim/4)) then halt endif
until ($counter>celem)


