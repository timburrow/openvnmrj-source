"macro BPaph2"
" BPaph2 "
if ($#=0) then $1=1 endif
select($1)
rp=0 lp=0
cz ph
z(10p,-1p)
bc
$bestrp=0
peak:$best
repeat
  rp=rp+10 bc peak:$pk
  if ($pk>$best) then $best=$pk $bestrp=rp endif
until rp>360
rp=$bestrp-16
peak:$pkbest
$pkbest=.8*$pkbest
$bestrp=rp
repeat
  rp=rp+2 bc peak:$pk
  if ($pk>$pkbest) then $pkbest=$pk $bestrp=rp endif
until rp>=$bestrp+16
rp=$bestrp
