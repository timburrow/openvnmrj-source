"macro CSdpars"
" default parameter settings for CLEAN processing"
"macro CSdpars"
" user adjustable macro for setting up 2D and 3D CLEAN processing"

sb1=-nimax/sw1 sbs1=sb1 fn1=4*nimax
exists('ni2','parameter'):$e
if($e) then
  if(ni2>1) then
    sb2=-ni2max/sw2 sbs2=sb2 fn2=4*ni2max
  endif
endif

wc=wcmax-20 sc=10 wc2=wc2max-10 sc2=0

