"macro solnum"

" Turn off unused solvent widgets. "
" This macro helps with panel display options and some parameter settings"
"It turns off all solvents larger in number than that selected by the user"

if (solnumber=1) then

slp='n' slps='n' slpss='n' slpw='n'
slp2='n' slp2s='n' slp2ss='n' slp2w='n'
slp3='n' slp3s='n' slp3ss='n' slp3w='n'
slp4='n' slp4s='n' slp4ss='n' slp4w='n'
slp5='n' slp5s='n' slp5ss='n' slp5w='n'
slp6='n' slp6s='n' slp6ss='n' slp6w='n'
endif

if (solnumber=2) then

slp='y' slps='y' slpss='y' slpw='y'
slp0='y' slp0s='y' slp0ss='y' slp0w='y'
slp2='n' slp2s='n' slp2ss='n' slp2w='n'
slp3='n' slp3s='n' slp3ss='n' slp3w='n'
slp4='n' slp4s='n' slp4ss='n' slp4w='n'
slp5='n' slp5s='n' slp5ss='n' slp5w='n'
slp6='n' slp6s='n' slp6ss='n' slp6w='n'
endif

if (solnumber=3) then

slp='y' slps='y' slpss='y' slpw='y'
slp0='y' slp0s='y' slp0ss='y' slp0w='y'
slp2='y' slp2s='n' slp2ss='n' slp2w='n'
slp3='n' slp3s='n' slp3ss='n' slp3w='n'
slp4='n' slp4s='n' slp4ss='n' slp4w='n'
slp5='n' slp5s='n' slp5ss='n' slp5w='n'
slp6='n' slp6s='n' slp6ss='n' slp6w='n'
endif

if (solnumber=4) then

slp='y' slps='y' slpss='y' slpw='y'
slp0='y' slp0s='y' slp0ss='y' slp0w='y'
slp2='y' slp2s='n' slp2ss='n' slp2w='n'
slp3='y' slp3s='n' slp3ss='n' slp3w='n'
slp4='n' slp4s='n' slp4ss='n' slp4w='n'
slp5='n' slp5s='n' slp5ss='n' slp5w='n'
slp6='n' slp6s='n' slp6ss='n' slp6w='n'
endif

if (solnumber=5) then

slp='y' slps='y' slpss='y' slpw='y'
slp0='y' slp0s='y' slp0ss='y' slp0w='y'
slp2='y' slp2s='n' slp2ss='n' slp2w='n'
slp3='y' slp3s='n' slp3ss='n' slp3w='n'
slp4='y' slp4s='n' slp4ss='n' slp4w='n'
slp5='n' slp5s='n' slp5ss='n' slp5w='n'
slp6='n' slp6s='n' slp6ss='n' slp6w='n'
endif

if (solnumber=6) then

slp='y' slps='y' slpss='y' slpw='y'
