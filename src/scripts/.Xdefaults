! @(#).Xdefaults 22.1 03/24/08
#if defined(tape_sun) || defined(tape_sol)
! Xdefaults for Sun (either SunOS or Solaris)
Window.Color.Foreground:	0 30 255
Window.Color.Background:	250 250 250
OpenWindows.MultiClickTimeout:	4
OpenWindows.Beep:	notices
OpenWindows.ScrollbarPlacement:	right
OpenWindows.IconLocation:	right
OpenWindows.Palette:	spring
OpenWindows.PopupJumpCursor:	True
OpenWindows.SetInput:	select
OpenWindows.WindowColor:	gray98
OpenWindows.WorkspaceColor:	#f6fbf5
OpenWindows.3DLook.Color:	True
OpenWindows.SelectDisplaysMenu:	False
OpenWindows.DragRightDistance:	100
Scrollbar.JumpCursor:	True
olwm.MinimalDecor:	Vnmr
*Vnmr*clientDecoration:   -title
*Glide*clientDecoration:  -title
*dg*clientDecoration: -title
Dtwm*iconPlacement:	right top
Dtwm*ib_ui*usePPosition:	on
dtwm*focusAutoRaise:    False

#elif defined(tape_sgi)
! Xdefaults for SGI
*resizeBorderWidth:    6
4Dwm*SG_frameOutline:  False
4Dwm*iconPlacement:    right top
4Dwm*positionIsFrame:    True
4Dwm*focusAutoRaise:    False
!4Dwm*SG_autoSave:       False   !prevents desktop autosave
*keyboardFocusPolicy:  explicit
*startupKeyFocus:      True
*Toolchest*clientDecoration:   all
*Vnmr*clientDecoration:   -title
*Glide*clientDecoration:  -title
*dg*clientDecoration: -title

#elif defined(tape_ibm)
! Xdefaults for IBM
XDesktop*pictureDirectory :  /usr/include/X11/bitmaps/xdt_i_large  /usr/include/X11/bitmaps/xdt_c_large
Mwm*background:        Gray
!Mwm*foreground:       Black
!Mwm*activeForeground:     gold
Mwm*activeBackground:      Gray
!Mwm*title*activeBackground:    DarkOliveGreen
!Mwm*title*activeForeground:    yellow
!Mwm*activeTopShadowColor:      Gray
!Mwm*activeBottomShadowColor:   Gray
Mwm*iconPlacement: 		top right
Mwm*resizeBorderWidth:           6 
Mwm*focusAutoRaise:    False
*Vnmr*clientDecoration:   -title
*Glide*clientDecoration:  -title
#endif
