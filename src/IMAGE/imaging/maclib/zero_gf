"macro zero_gf"
"setprotect('dro','off',8)"
"setprotect('dpe','off',8)"
"setprotect('dsl','off',8)"

dro = 0
dpe = 0
dsl = 0

"setprotect('dro','on',8)"
"setprotect('dpe','on',8)"
"setprotect('dsl','on',8)"

set_gf_array
"set_gf_array also calls bvalue"

create('nbval','real','current',0)
create('nbzero','real','current',0)
create('nbdirs','real','current',0)
create('dstart','real','current',0)
nbval=0
nbzero=0
nbdirs=0
