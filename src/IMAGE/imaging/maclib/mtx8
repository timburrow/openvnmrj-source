"macro mtx8"
$action = ''

if ($# > 0) then
  $action = $1
  else
  banner('no action requested')
endif

if ($action='selectall') then
  
  my_on_off[1]=1 
  my_on_off[2]=1 
  my_on_off[3]=1 
  my_on_off[4]=1 
  my_on_off[5]=1 
  my_on_off[6]=1 
  my_on_off[7]=1 
  my_on_off[8]=1 

else

  my_on_off[1]=0 
  my_on_off[2]=0 
  my_on_off[3]=0 
  my_on_off[4]=0 
  my_on_off[5]=0 
  my_on_off[6]=0 
  my_on_off[7]=0 
  my_on_off[8]=0 


endif

